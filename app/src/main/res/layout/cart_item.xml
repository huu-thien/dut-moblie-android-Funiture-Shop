<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:layout_height="wrap_content"

    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image_carturl"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/facebook_button">
        </ImageView>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="wrap_content">

            <TextView
                android:padding="6dp"
                android:id="@+id/txt_cartname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textColor="#376553"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="TOTAL PRICE"
                android:padding="8dp"
                android:textColor="#376553"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:id="@+id/txt_carttotalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123$"
                android:textSize="17dp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:textColor="#e29547"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cartremove"
                android:backgroundTint="#376553"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textColor="#fff"
                android:textSize="16sp">
            </Button>

            <TextView
                android:id="@+id/txt_cartquantity"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp">

            </TextView>
            <Button
                android:id="@+id/btn_cartadd"
                android:layout_width="40dp"
                android:backgroundTint="#376553"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:text="+"
                android:textSize="16sp">
            </Button>
        </LinearLayout>


        </LinearLayout>
</androidx.cardview.widget.CardView>